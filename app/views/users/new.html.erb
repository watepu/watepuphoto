<h2>新規登録</h2>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="user_form">
  <%= f.label :name %>
  </div>
  <div class="input_field">
  <%= f.text_field :name %>
  </div>

  <div class="user_form">
  <%= f.label :email %>
  </div>
  <div class="input_field">
  <%= f.email_field :email %>
  </div>

  <div class="user_form">
  <%= f.label :password %>
  </div>
  <div class="input_field">
  <%= f.password_field :password %>
  </div>

  <div class="user_form">
  <%= f.label :password_confirmation %>
  </div>
  <div class="input_field">
  <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "新規登録", :class => "submit_btn" %>

<% end %>
